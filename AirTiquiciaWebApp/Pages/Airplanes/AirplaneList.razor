@page "/Aviones"
@inherits AirplaneListBase

@attribute [Authorize]

<h3>Lista de aviones</h3>
<a href="Aviones/Nuevo" class="btn btn-primary">Agregar avión</a>
<table class="table">
    <thead>
        <tr>
            <th>Identificador</th>
            <th>Aerolínea</th>
            <th>Descripción</th>
            <th>Tamaño</th>
            <th>Capacidad</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var airplane in Airplanes)
        {
            <tr>
                <td>@airplane.IdAirplane</td>
                <td>@airplane.IdAeroline</td>
                <td>@airplane.Description</td>
                <td>@airplane.Size</td>
                <td>@airplane.Capacity</td>
                <td><a href="/Aviones/Detalle/@airplane.IdAirplane" class="btn btn-primary">Ver</a></td>
                <td><a href="/Aviones/@airplane.IdAirplane" class="btn btn-secondary">Editar</a></td>

            </tr>
        }
    </tbody>
</table>


